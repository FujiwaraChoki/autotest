generator client{
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id String  @id @default(auto()) @map("_id") @db.ObjectId
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    email String?  @unique
    name String
    hashedPassword String?
    tests String[] @db.ObjectId
}

model Test {
    id String  @id @default(auto()) @map("_id") @db.ObjectId
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    title String?
    description String?
    questions String[] @db.ObjectId
}

model Question {
    id String  @id @default(auto()) @map("_id") @db.ObjectId
    question String?
    choices String[]
    answer String?
}